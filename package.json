{
  "name": "english-learning-player",
  "version": "0.0.1",
  "description": "MacOS media player skeleton with tests and packaging setup.",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 src/renderer/**/* dist/renderer",
    "start": "npm run build && electron dist/main/main.js",
    "test": "vitest run",
    "pretest": "npm run build",
    "dist": "npm run build && electron-builder --mac dmg --publish never"
  },
  "keywords": [
    "electron",
    "media",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "copyfiles": "^2.4.1",
    "electron": "^28.2.4",
    "electron-builder": "^24.13.3",
    "execa": "^8.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.example.englishlearningplayer",
    "productName": "EnglishLearningPlayer",
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.music"
    },
    "directories": {
      "buildResources": "buildResources",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "version": "0.0.1",
      "main": "dist/main/main.js"
    }
  }
}